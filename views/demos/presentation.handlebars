<div class="presentation-container">
    <header class="presentation-header">
        <h1>{{demoTitle}}</h1>
        <p class="subtitle">{{demoDescription}}</p>
        <a href="{{demoLink}}" class="btn-test-demo">Testar Demo <i class='bx bx-play-circle'></i></a>
    </header>

    <section class="presentation-showcase">
        <div class="browser-mockup">
            <div class="browser-header">
                <span class="dot red"></span>
                <span class="dot yellow"></span>
                <span class="dot green"></span>
            </div>
            <img src="{{demoImage}}" alt="{{demoTitle}} Screenshot" class="demo-screenshot">
        </div>
    </section>

    <section class="presentation-features">
        <h2>Principais Funcionalidades</h2>
        <div class="features-grid">
            {{#each features}}
            <div class="feature-card">
                <i class='{{this.icon}}'></i>
                <h3>{{this.title}}</h3>
                <p>{{this.desc}}</p>
            </div>
            {{/each}}
        </div>
    </section>
</div>

