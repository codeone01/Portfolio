<script>
    // State
    const bookingData = {
        name: '',
        email: '',
        phone: '',
        service: '',
        servicePrice: 0,
        barber: '',
        date: '',
        time: ''
    };

    // Init
    document.addEventListener('DOMContentLoaded', () => {
        // Set min date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('booking-date').min = today;

        // Generate Time Slots
        generateTimeSlots();
    });

    function generateTimeSlots() {
        const container = document.getElementById('time-slots');
        container.innerHTML = '';
        const start = 9;
        const end = 19;

        for (let i = start; i < end; i++) {
            const hour = i < 10 ? '0' + i : i;

            // :00
            createSlot(container, hour + ':00');
            // :30
            createSlot(container, hour + ':30');
        }
    }

    function createSlot(container, time) {
        const div = document.createElement('div');
        div.className = 'time-slot';
        div.innerText = time;
        div.onclick = () => selectTime(div, time);

        // Mock occupied slots
        if (Math.random() > 0.7) {
            div.style.opacity = '0.3';
            div.style.pointerEvents = 'none';
            div.style.textDecoration = 'line-through';
        }

        container.appendChild(div);
    }

    function selectTime(el, time) {
        document.querySelectorAll('.time-slot').forEach(s => s.classList.remove('selected'));
        el.classList.add('selected');
        bookingData.time = time;
    }

    // Navigation
    function nextStep(currentStep) {
        if (!validateStep(currentStep)) return;

        document.getElementById('step-' + currentStep).classList.remove('active');
        document.getElementById('step-' + (currentStep + 1)).classList.add('active');

        document.getElementById('step-ind-' + (currentStep + 1)).classList.add('active');
        document.getElementById('step-ind-' + currentStep).classList.add('completed');

        if (currentStep === 3) updateSummary();
    }

    function prevStep(currentStep) {
        document.getElementById('step-' + currentStep).classList.remove('active');
        document.getElementById('step-' + (currentStep - 1)).classList.add('active');

        document.getElementById('step-ind-' + currentStep).classList.remove('active');
        document.getElementById('step-ind-' + (currentStep - 1)).classList.remove('completed');
    }

    function validateStep(step) {
        if (step === 1) {
            const name = document.getElementById('client-name').value;
            const email = document.getElementById('client-email').value;
            const phone = document.getElementById('client-phone').value;

            if (!name || !email || !phone) {
                alert('Por favor, preencha todos os campos.');
                return false;
            }
            bookingData.name = name;
            bookingData.email = email;
            bookingData.phone = phone;
        }
        if (step === 2) {
            if (!bookingData.service || !bookingData.barber) {
                alert('Selecione um serviço e um barbeiro.');
                return false;
            }
        }
        if (step === 3) {
            const date = document.getElementById('booking-date').value;
            if (!date || !bookingData.time) {
                alert('Selecione uma data e um horário.');
                return false;
            }
            bookingData.date = date;
        }
        return true;
    }

    // Selection Logic
    function setService(service, price) {
        bookingData.service = service;
        bookingData.servicePrice = price;

        document.querySelectorAll('#service-selection .selection-card').forEach(c => c.classList.remove('selected'));
        document.getElementById('srv-' + service).classList.add('selected');
    }

    function setBarber(barber) {
        bookingData.barber = barber;

