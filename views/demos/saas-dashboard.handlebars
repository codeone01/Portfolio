{{>demo-nav}}
<div class="demo-container saas-dashboard-theme">
    <aside class="sidebar">
        <div class="logo">AnalyticsPro</div>
        <nav>
            <a href="#" class="active"><i class='bx bx-home'></i> Dashboard</a>
            <a href="#"><i class='bx bx-bar-chart'></i> Reports</a>
            <a href="#"><i class='bx bx-user'></i> Users</a>
            <a href="#"><i class='bx bx-cog'></i> Settings</a>
        </nav>
    </aside>
    <main class="main-content">
        <header>
            <h2>Dashboard Overview</h2>
            <div class="user-profile">
                <span>{{user.name}}</span>
                <div class="avatar"></div>
            </div>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Users</h3>
                <p class="number">12,345</p>
                <span class="trend up">+5.2%</span>
            </div>
            <div class="stat-card">
                <h3>Revenue</h3>
                <p class="number">$45,678</p>
                <span class="trend up">+12.8%</span>
            </div>
            <div class="stat-card">
                <h3>Active Sessions</h3>
                <p class="number">892</p>
                <span class="trend down">-2.1%</span>
            </div>
        </div>

        <div class="chart-section">
            <div class="chart-box">
                <h3>Traffic Overview</h3>
                <div class="fake-chart"
                    style="height: 300px; background: #f9f9f9; display: flex; align-items: flex-end; justify-content: space-around; padding: 20px;">
                    <div style="width: 40px; height: 40%; background: #4a90e2;"></div>
                    <div style="width: 40px; height: 60%; background: #4a90e2;"></div>
                    <div style="width: 40px; height: 30%; background: #4a90e2;"></div>
                    <div style="width: 40px; height: 80%; background: #4a90e2;"></div>
                    <div style="width: 40px; height: 50%; background: #4a90e2;"></div>
                    <div style="width: 40px; height: 90%; background: #4a90e2;"></div>
                </div>
            </div>
        </div>
    </main>
</div>