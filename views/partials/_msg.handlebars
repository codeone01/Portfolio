{{#if success_msg}}
    <div class='content'>
        <div class="alert alert-success alert-white rounded" id="success_msg">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"
                onclick="document.getElementById('success_msg').style.display='none'">×</button>
            <div class="icon"><i class="fa fa-check"></i></div>
            <strong>Sucesso!</strong> {{success_msg}}
        </div>
    </div>
{{/if}}
{{#if error_msg}}
    <div class='content'>
        <div class="alert alert-danger alert-white rounded" id="error_msg">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"
                onclick="document.getElementById('error_msg').style.display='none'">×</button>
            <div class="icon"><i class="fa fa-times-circle"></i></div>
            <strong>Error!</strong> {{error_msg}}
        </div>
    </div>
{{/if}}